// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// üõ°Ô∏è Definir Roles como Enum evita erros de escrita (admin vs ADMIN)
enum Role {
  ADMIN
  OWNER
  STAFF
  CLIENT
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  name      String?  // <--- ESTA √â A COLUNA QUE FALTA NO TEU ERRO
  email     String?  @unique
  password  String
  role      Role     @default(CLIENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users") // Boa pr√°tica: tabelas em min√∫sculo no MySQL
}