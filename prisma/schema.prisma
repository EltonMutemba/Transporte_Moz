generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN  // Gestor operacional (Nagi)
  OWNER  // Dono que só vê relatórios
  STAFF  // Bilheteiro
  CLIENT // Passageiro
}

model User {
  id        Int      @id @default(autoincrement())
  username  String?  @unique
  phone     String   @unique
  name      String?
  email     String?  @unique
  password  String
  role      Role     @default(CLIENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tickets   Ticket[]
  logs      AuditLog[] // Para o Owner fiscalizar

  @@map("users")
}

model Bus {
  id        Int     @id @default(autoincrement())
  plate     String  @unique
  model     String
  capacity  Int     // Adicionado: Essencial para validar lotação
  trips     Trip[]

  @@map("buses")
}

model Trip {
  id             Int       @id @default(autoincrement())
  origin         String
  destination    String
  departureTime  DateTime
  price          Decimal   @db.Decimal(10, 2)
  status         String    @default("AVAILABLE")
  busId          Int
  bus            Bus       @relation(fields: [busId], references: [id])
  availableSeats Int
  tickets        Ticket[]
  packages       Package[] // Inclusão de Encomendas

  @@map("trips")
}

model Ticket {
  id            Int      @id @default(autoincrement())
  tripId        Int
  trip          Trip     @relation(fields: [tripId], references: [id])
  userId        Int
  user          User     @relation(fields: [userId], references: [id])
  seatNumber    Int
  paymentStatus String   @default("PENDING")
  reference     String?  @unique
  createdAt     DateTime @default(now())

  @@map("tickets")
}

// NOVA: Essencial para o negócio em Moçambique
model Package {
  id            Int      @id @default(autoincrement())
  description   String
  weight        Decimal? @db.Decimal(10, 2)
  price         Decimal  @db.Decimal(10, 2)
  receiverName  String
  receiverPhone String
  tripId        Int
  trip          Trip     @relation(fields: [tripId], references: [id])
  status        String   @default("PENDING") // PENDING, DELIVERED

  @@map("packages")
}

// NOVA: Para o Owner (Dono) ter o controle que discutimos
model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  action    String   // ex: "Preço da viagem alterado"
  createdAt DateTime @default(now())

  @@map("audit_logs")
}